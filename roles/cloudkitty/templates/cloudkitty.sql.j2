{% if destroy_data %}
DROP DATABASE IF EXISTS cloudkitty;
{% endif %}
CREATE DATABASE IF NOT EXISTS cloudkitty CHARACTER SET utf8 COLLATE utf8_general_ci;

GRANT ALL PRIVILEGES ON cloudkitty.* TO 'cloudkitty'@'localhost' IDENTIFIED BY '{{ cloudkittydb_password }}';
GRANT ALL PRIVILEGES ON cloudkitty.* TO 'cloudkitty'@'{{ ansible_hostname }}' IDENTIFIED BY '{{ cloudkittydb_password }}';
GRANT ALL PRIVILEGES ON cloudkitty.* TO 'cloudkitty'@'%' IDENTIFIED BY '{{ cloudkittydb_password }}';
